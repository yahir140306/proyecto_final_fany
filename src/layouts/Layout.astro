---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Proyecto Final - Estefania Amador",
  description = "Proyecto Final de Sistema de Investigaci√≥n de Mercados I",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />
  </head>
  <body
    class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-100 to-purple-100 overflow-x-hidden"
  >
    <div class="relative min-h-screen flex justify-center">
      <!-- Elementos decorativos de fondo -->
      <div class="fixed inset-0 overflow-hidden pointer-events-none z-0">
        <div
          class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"
        >
        </div>
        <div
          class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-br from-blue-400 to-cyan-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse animation-delay-2000"
        >
        </div>
        <div
          class="absolute top-40 left-1/2 w-60 h-60 bg-gradient-to-br from-indigo-400 to-purple-400 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse animation-delay-4000"
        >
        </div>
      </div>

      <div class="relative w-full z-10">
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
