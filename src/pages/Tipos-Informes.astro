<script>
  import ScrollReveal from "scrollreveal";

  document.addEventListener("DOMContentLoaded", function () {
    const sr = ScrollReveal({
      distance: "50px",
      duration: 800,
      easing: "ease-in-out",
      reset: false,
      mobile: true,
      viewFactor: 0.2,
    });

    // Contenedor principal
    sr.reveal(".scroll-animate", {
      origin: "bottom",
      delay: 200,
    });

    // Título principal
    sr.reveal(".title-animate", {
      origin: "top",
      delay: 500,
    });

    // Cada tarjeta de informe aparece con 500ms de diferencia
    sr.reveal(".card-animate", {
      origin: "bottom",
      distance: "60px",
      duration: 900,
      interval: 500,
    });

    // Elementos de las listas dentro de cada tarjeta
    sr.reveal(".scroll-stagger", {
      origin: "left",
      distance: "30px",
      duration: 600,
      interval: 200,
    });
  });
</script>
